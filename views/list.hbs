<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Users</title>
</head>
<body>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
        {{!-- Looping --}}
        {{#each users}}
        <tr>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>Click to <a href="/auth/updateform/{{this.email}}">Edit</a> <a href="/auth/deleteUser/{{this.user_id}}">Delete</a></td>
        </tr>
        {{/each}}
    </table>
    
    {{!-- Using conditionals --}}
    {{#if message }} 
    <h4>{{message}}</h4>
    {{/if}}
</body>
</html>